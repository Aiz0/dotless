SSH_AUTH_SOCK DEFAULT="${XDG_RUNTIME_DIR}/ssh-agent.socket"

# XDG base directory
XDG_CONFIG_HOME     DEFAULT="@{HOME}/etc"
XDG_DATA_HOME       DEFAULT="@{HOME}/var/share"
XDG_CACHE_HOME      DEFAULT="@{HOME}/var/cache"

# non-standard XDG
XDG_STATE_HOME      DEFAULT="@{HOME}/var/lib"
XDG_LOG_HOME        DEFAULT="@{HOME}/var/log"

# X

XAUTHORITY          DEFAULT="${XDG_CONFIG_HOME}/sx/xauth"


ANDROID_SDK_ROOT        DEFAULT="${XDG_DATA_HOME}/android"
ANDROID_EMULATOR_HOME   DEFAULT="${XDG_DATA_HOME}/android"
ANDROID_SDK_HOME        DEFAULT="${XDG_DATA_HOME}/android"
CARGO_HOME              DEFAULT="${XDG_STATE_HOME}/cargo"
CCACHE_DIR              DEFAULT="${XDG_STATE_HOME}/ccache"
DOTNET_ROOT             DEFAULT="${XDG_STATE_HOME}/dotnet"
DOTNET_PACKAGES         DEFAULT="${XDG_STATE_HOME}/nuget/packages"
MONO_GAC_PREFIX         DEFAULT="${XDG_STATE_HOME}/mono"
MONO_SHARED_DIR         DEFAULT="${XDG_STATE_HOME}/wapi"
GOPATH                  DEFAULT="${XDG_STATE_HOME}/go"
GRADLE_USER_HOME        DEFAULT="${XDG_STATE_HOME}/gradle"
GNUPGHOME               DEFAULT="${XDG_STATE_HOME}/gnupg"
HISTFILE                DEFAULT="${XDG_STATE_HOME}/bash/bash_history"
LESSHISTFILE            DEFAULT="${XDG_STATE_HOME}/lesshist"
PGPPATH                 DEFAULT="${GNUPGHOME}"
PYTHONUSERBASE          DEFAULT="${XDG_STATE_HOME}/python"
PYLINTHOME              DEFAULT="${XDG_CACHE_HOME}/pylint"
NPM_CONFIG_USERCONFIG   DEFAULT="${XDG_CONFIG_HOME}/npm/npmrc"
QMK_HOME                DEFAULT="@{HOME}/src/qmk"
WINEPREFIX              DEFAULT="${XDG_STATE_HOME}/wine/default"
