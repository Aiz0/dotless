[colors]
; Use colors from Xresources
background =      #1E222A
foreground =      #f2f2f2
foreground-alt =  #f2f2f2
primary =         #f05656
secondary =       #2cc46e
alert =           #ecc46f

; Bar used for bspwm
[bar/bspwmbar]
monitor = ${env:MONITOR:}
enable-ipc=true

width = 100%
height = 20

wm-restack = bspwm

background = ${colors.background}
foreground = ${colors.foreground}

; Fonts

font-0 = "sans serif:size=10;1"
; Material icons from materialdesignicons.com
font-1 = "MaterialDesignIcons:size=10;1"

; Lines
line-size = 3
line-color = #ff0000

; Padding and margin
module-margin = 2
padding = 2

; Modules
modules-left = bspwm
modules-right = pulseaudio updates protonvpn date clock

tray-position = none

; bspwm module
[module/bspwm]
type = internal/bspwm

pin-workspaces = true

label-focused = %name%
label-focused-underline = ${colors.foreground}

label-focused-padding = 2

label-occupied = %name%
label-occupied-padding = 2

label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

; left empty to hide unused desktops
label-empty =

; Date module
[module/date]
type = internal/date
interval = 10

date = "%Y-%m-%d"

; Calendar icon
format-prefix = "󰃭 "

label = %date%

; Clock module
[module/clock]
type = internal/date
interval = 5
time = %H:%M

; Clock icon
format-prefix = "󰅐 "
label = %time%

[module/pulseaudio]
type = internal/pulseaudio

label-volume =
label-muted = 󰝟

[module/protonvpn]
type = custom/script
exec = $XDG_CONFIG_HOME/polybar/polybar-scripts/protonvpn.sh
interval = 5

[module/updates]
type = custom/script
exec = $XDG_CONFIG_HOME/polybar/polybar-scripts/updates-pacman-aurhelper.sh
interval = 60

; Sync icon
format-prefix = "󰓦 "

[settings]
screenchange-relaod = true
