#
# WM independant hotkeys
#

# Terminal emulator
super + Return
	$TERM

# Program launcher
super + @space
	rofi -show drun

# Reload sxhkd config
super + Escape
	pkill -USR1 -x sxhkd;\
	dunstify "sxhkd" "Reloaded configuration"

super + slash
	sxhkd-help.sh

# Lock screen
super + l
	xsecurelock

# Screenshot
super + {_,shift +}{v,c,x}
	;if pgrep -x maim > /dev/null; then maim {-u, ""} {-q, -st 9999999,-s} /tmp/screenshot.png; fi; \
	screenshot-directory.sh /tmp/screenshot.png ; \
	dunstify -a screenshot "Cheese!" "Screenshot saved."

#
# Audio
#

# Volume
XF86Audio{Raise,Lower}Volume
	amixer -q set Master 1%{+,-} unmute ;\
	notify-volume.sh


# Mute
XF86AudioMute
	amixer -q set Master toggle

# Play / Pause Track
XF86AudioPlay
	playerctl play-pause -p spotify;\
	playerctl-notifications.sh

# Track Selection
XF86Audio{Prev,Next}
	;playerctl {previous, next} -p spotify ;\
	sleep 0.15;\
	playerctl-notifications.sh

